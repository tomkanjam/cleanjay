<div id="" class="row marg-top-40">
  <div class="col-md-4 col-md-offset-4" id="">

		<div class="panel panel-default">
			<div class="panel-heading">Create Account</div>
			<div class="panel-body">
				<%= form_for(@user, :url => {:action => "create_buyer"}, :method => :post) do |f| %>
					<% if @user.errors.any? %>
						<div class="">
							<div class="alert alert-danger">Please resolve the following so that we can create your account, thanks!:</div>
							<ul>
								<% @user.errors.full_messages.each do |message| %>
									<li><%= message %></li>
								<% end %>
							</ul>
						</div>
					<% end %>

        	<div class="form-group">
						<%= f.label :email %>
						<%= f.text_field :email, :class => "form-control" %>

						<%= f.label :password %>
						<%= f.password_field :password, :class => "form-control" %>
					</div>

					<%= f.submit "Create Account", :class => "btn btn-default" %>
					<%= hidden_field_tag :profile_id, @profile_id %>
					<%= f.hidden_field :role, value: "buyer" %>
				<% end %>
			</div>
		</div>
	</div>

  <div class="col-md-4 col-md-offset-4 marg-top-40" style="text-align:center" id="">
    <h6 style="background-color:rgb(250, 250, 250);display: inline-block;padding: 0 8px;" class="shift text text-special">OR</h6>
    <hr style="margin: -16px auto 10px auto;width: 90%;">
  </div>
  
  <div class="col-md-4 col-md-offset-4 marg-top-40" id="">

		<div class="panel panel-default">
			<div class="panel-heading">Login With Existing Account</div>
			<div class="panel-body">
		
				<%= form_tag sessions_path do %>
					<form>
        		<div class="form-group">
							<label>Email</label>
							<%= text_field_tag :email, params[:email], :class => "form-control" %>
							<label>Password</label>
							<%= password_field_tag :password, "", :class => "form-control" %>
							<%= hidden_field_tag :profile_id, @profile_id %>
						</div>
						<%= submit_tag "Log In", :class => "btn btn-default" %>
					</form>
				<% end %>

							<%= @profile_id %>
			</div>
		</div>

  </div>
</div>
