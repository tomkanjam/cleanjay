									  <option value="12:00pm">12:00pm</option>
									  <option value="12:30pm">12:30pm</option>
									  <option value="1:00pm">1:00pm</option>
									  <option value="1:30pm">1:30pm</option>
									  <option value="2:00pm">2:00pm</option>
									  <option value="2:30pm">2:30pm</option>
									  <option value="3:00pm">3:00pm</option>
									  <option value="3:30pm">3:30pm</option>
									  <option value="4:00pm">4:00pm</option>
									  <option value="4:30pm">4:30pm</option>
									  <option value="5:00pm">5:00pm</option>
									  <option value="5:30pm">5:30pm</option>
									  <option value="6:00pm">6:00pm</option>
									  <option value="6:30pm">6:30pm</option>
									  <option value="7:00pm">7:00pm</option>
								  </select>
							  </div>
						  </div>
					  </div>

	        	<div class="form-group">
						  <label>Please specify cleaning priorities and provide any additional instructions you may have.</label>
						  <%= f.text_area :details, :rows => 5, :class => "job-details form-control" %>
					  </div>

	        	<div class="form-group">
						  <label>Whatâ€™s the cleaning address?</label>
						  <div class="row">
							  <div class="col-md-8" id="">
						  <%= f.text_field :address, :class => "form-control", :placeholder => "Street Address" %>
							  </div> 
							  <div class="col-md-4" id="">
								  <%= f.text_field :apartment, :class => "form-control", :placeholder => "Apt." %>
							  </div> 
						  </div> 
	        	<div class="form-group">
	        	
					  </div> 
						  <div class="row">
							  <div class="col-md-8" id="">
						      <%= f.text_field :city, :class => "form-control", :placeholder => "City" %>
							  </div> 
							  <div class="col-md-4" id="">
								  <%= f.text_field :postal_code, :class => "form-control", :placeholder => "Postal code" %>
							  </div> 
						  </div> 
					  </div>

            <div class="form-group">
						  <label>Name</label>
						  <%= f.text_field :name, :class => "form-control", :placeholder => "Full name" %>
					  </div>
	        	<div class="form-group">
						  <label>Phone</label>
						  <%= f.text_field :phone, :class => "form-control", :placeholder => "Phone Number" %>
					  </div>
					  
          	<div class="form-group">
					    <label>Email</label>
					    <%= f.email_field :email, :class => "form-control", :placeholder => "Email Address" %>
				    </div>

					  <div class="actions">
						  <%= f.submit "Create Booking & Review", :class => "btn btn-default" %>
					  </div>
					  
					  <%= f.hidden_field :profile_id, value: @profile_id %>
					  <%= f.hidden_field :hours, value: @hours %>
					  <%= f.hidden_field :rate, value: @rate %>
					  
				  </div>
