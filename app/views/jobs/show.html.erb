<div class="container">
	<div class="row marg-top-40">
		<div class="col-md-6 col-md-offset-3 col-xs-12" id="">
		
		  <div class="text-box">
		  
        <div class="text-box-heading">
          <h4><%= @job_name %></h4>
          <p>
            <%= @job_hours %> hours | <%= @job_date %>
          </p>
          <p><%= @job_phone %> | <%= @job_email %></p>
          <p>
            <%= link_to(@job_location, "http://maps.google.com/?q=#{@job_location}") %>
          </p>
          <% case @job_status %> 
          <% when "pending" %> 
            <h3><span class="label label-warning">Pending</span></h3>
          <% when "confirmed" %> 
            <h3><span class="label label-success">Confirmed</span></h3>
          <% when "cancelled" %> 
            <h3><span class="label label-default">Cancelled</span></h3>
          <% when "rejected" %> 
            <h3><span class="label label-default">Rejected</span></h3>
          <% end %> 
        </div>
        
        <% if @show_box_content %> 
          <div class="text-box-content" style="height: px">
            <p>
              <%= @job_extras %>
            </p>
            <p>
              <%= @job_details %>
            </p>
          </div>
        <% end %> 
        
        <div class="text-box-btn">
	        <div class="row">
            <%= form_for(@job) do |f| %>
		          <div class="col-md-7 col-xs-12">
		            <div class="form-group">
			            <%= f.select :status, [ ['Confirm', 'confirmed'], ['Reject', 'rejected'] ], {}, { :class => "form-control" } %>
	              </div>
              </div>
		          <div class="col-md-5 col-xs-12">
		            <div class="form-group">
						      <%= f.submit "Change status", :class => "btn btn-default" %>
	              </div>
              </div>
            <% end %> 
          </div>
        </div>
        
      </div>
      
	    <div class="row marg-top-40">
		    <div class="col-xs-12" style="text-align:center">
		      <a class="btn btn-info" href="/dashboard/bookings">Back to bookings</a>
        </div>
      </div>
  
		
    </div>
  </div>
</div>

