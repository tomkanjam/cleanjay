<%= render :partial => "nav" %>	
<div class="container">
	<div class="row marg-top-40">
	
		<div class="col-md-3" id="">
		  <div class="widget widget-categories">
		  
	      <div class="widget-title"><h5>Users</h5></div>
          
        <ul>
          <% @users.each do |user| %>
            <li><%= link_to user.email, "/ehdmin/edit_user/#{user.id}" %></li>
          <% end %>
        </ul>
          
      </div>	  			  
		</div>
		
		<div class="col-md-9" id="">
      <div class="panel panel-default">
        <div class="panel-body">
          <%= form_for @user do |f| %>
			      <div class="form-group">
              <label>Email</label>
              <%= f.text_field :email, :class => "span3" %>
	          </div>
			      <div class="form-group">
              <label>Name</label>
              <%= f.text_field :name, :class => "span3" %>
	          </div>
			      <div class="form-group">
              <label>First Name</label>
              <%= f.text_field :first_name, :class => "span3" %>
	          </div>
			      <div class="form-group">
              <label>Last Name</label>
              <%= f.text_field :last_name, :class => "span3" %>
	          </div>
			      <div class="form-group">
              <label>Password</label>
              <%= f.password_field :password, :class => "span3" %>
	          </div>
            <%= f.submit "Save", :class => "btn btn-primary" %>
          <% end %>
	      </div>
      </div>
    </div>
		  
  </div>
</div>
