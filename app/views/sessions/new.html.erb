
<!-- ==============================================
HEADER
=============================================== -->
<section id="single-header" class="color-bg light-typo padding-top-bottom">

	<div class="container center">
		
		<h1 class="section-title">Login</h1>
											
	</div><!-- End container -->
	
</section>


<!-- ==============================================
FORM
=============================================== -->
<section id="create-booking" class="padding-top-bottom">
  
  <div class="container" id="step-1">
                      
    <div class="row">
    
    <!--=== Contact Form ===-->

      <div class="col-sm-6 col-sm-offset-3" id="contact-form">
        <%= form_tag sessions_path, :html => {:role => "form", :novalidate => ""} do %>

          <div class="form-group">
            <label class="control-label" for="contact-mail">Email</label>
            <div class=" controls">
              <input id="email" name="email" placeholder="Your email" class="form-control requiredField label_better" type="email" data-error-empty="Please enter your email" data-error-invalid="Invalid email address">
              <i class="fa fa-envelope"></i>
            </div>
          </div>
          
          <div class="form-group">
            <label class="control-label" for="contact-mail">Email</label>
            <div class=" controls">
              <input id="password" name="password" placeholder="Your password" class="form-control requiredField label_better" type="password" data-error-empty="Please enter your email" data-error-invalid="Invalid email address">
              <i class="fa fa-lock"></i>
            </div>
          </div>
        
          <p><button name="submit" type="submit" class="btn btn-qubico btn-block" data-error-message="Error!" data-sending-message="Sending..." data-ok-message="Booking Request Created"><i class="fa fa-location-arrow"></i>Login</button></p>
          <input type="hidden" name="submitted" id="submitted" value="true" />
        
        <% end %><!-- End contact-form -->
      </div>
    
    </div>
    
  </div>
  
</section>
